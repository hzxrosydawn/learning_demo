<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- 使用classpath关键字从类路径加载Spring配置文件 -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:sample-context.xml</param-value>
    </context-param>

    <!-- ContextLoaderListener为启动Spring容器的监听器，负责加载contextConfigLocation上下文参数的Spring配置-->
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>

    <!--指定Spring的主控Servlet。
    该Servlet的名称“serverName”要求在WEB-INF目录下存在一个“serverName-servlet.xml”（可以配置视图解析器等），
    该配置文件无需在contextConfigLocation上下文参数中配置，Spring会自动将该xml文件与其他Spring配置文件进行合并-->
    <servlet>
        <servlet-name>sample</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>sample</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
</web-app>